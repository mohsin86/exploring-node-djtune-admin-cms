<!DOCTYPE html>
<html lang="en">
<head>
    {{> head }}
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
{{> header }}

<div class="app-body">
    {{> leftMenu }}

    <main class="main">
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">
                <a href="#">Admin</a>
            </li>
            <li class="breadcrumb-item active">Our Djs</li>
            <!-- Breadcrumb Menu-->
            <li class="breadcrumb-menu d-md-down-none">
                <div class="btn-group" role="group" aria-label="Button group">
                    <a class="btn" href="#">
                        <i class="icon-speech"></i>
                    </a>
                    <a class="btn" href="./">
                        <i class="icon-graph"></i>  Dashboard</a>
                    <a class="btn" href="{{SITE_URL}}/settings">
                        <i class="icon-settings"></i>  Settings</a>
                </div>
            </li>
        </ol>

        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Our Djs
                        <a href="{{SITE_URL}}/add-djs" class="btn btn-info fl" type="button">Add Djs</a>

                    </div>
                    <div class="card-body">

                        <table class="table table-responsive-sm table-bordered">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th> Name</th>
                                <th> Photo </th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            {{#each data.djLists}}
                                <tr>
                                    <td>1</td>
                                    <td>{{name}}</td>
                                    <td>{{#if photo}} <img src="{{photo}}" width="100"/> {{/if}}</td>
                                    <td>
                                        {{#if status}}
                                            <span class="badge badge-success">Enable</span>
                                        {{else}}
                                            <span class="badge badge-danger">disable</span>
                                        {{/if}}
                                    </td>
                                    <td><button class="btn btn-primary mb-1" id="our-djs-edit" type="button" data-toggle="modal" data-target="#primaryModal">Edit</button>
                                         <a class="btn btn-danger mb-1" href="#">del</a></td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </main>
    <!-- /.modal-->
    <div class="modal fade" id="primaryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:700px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Modal title</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="http://localhost:3000/creat-djs" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                                            <span class="input-group-text">
                                                                <i class="icon-user"></i>
                                                            </span>
                                        </div>
                                        <input class="form-control " name="name" value="" type="text" placeholder="Name">

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="icon-user"></i>
                                                        </span>
                                        </div>
                                        <input class="form-control" name="designation" type="text" value="" placeholder="Designation">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="shortBio">Short Bio</label>
                            <div class="col-md-9">
                                <textarea class="form-control" id="shortBio" name="shortBio" rows="2" placeholder="Short Bio"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="longBio">Long Bio</label>
                            <div class="col-md-9">
                                <textarea class="form-control" id="longBio" name="longBio" rows="3" placeholder="Short Bio"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-facebook fa-lg"></i>
                                            </span>
                                </div>
                                <input class="form-control" name="fblink" type="text" placeholder="facebook link" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-youtube"></i>
                                            </span>
                                </div>
                                <input class="form-control" name="youtubeLink" type="text" placeholder="Youtube link" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-heart fa-lg"></i>
                                            </span>
                                </div>
                                <input class="form-control" name="featuredVideoLink" type="text" placeholder="Featured Video link" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Featured Djs</label>
                            <div class="col-md-9 col-form-label">
                                <div class="form-check form-check-inline mr-1">
                                    <input class="form-check-input" id="inline-checkbox1" type="checkbox" value="check1">
                                    <label class="form-check-label" for="inline-checkbox1">Featured</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="image">Image</label>
                            <div class="col-md-9 ">
                                <input class="" id="file-input" type="file" accept="image/*" name="photo">
                            </div>


                        </div>
                        <input class="btn btn-block btn-success" type="submit" value="Create Artist">
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary" type="button">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content-->
        </div>
        <!-- /.modal-dialog-->
    </div>
    <!-- /.modal-->
    {{> aside }}

</div>

{{> footer}}

{{> allExternalScript}}

</body>
</html>
